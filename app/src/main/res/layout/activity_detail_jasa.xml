<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imgPhoto"
        android:layout_width="224dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
         />

    <Button
        android:id="@+id/btnCapture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Capture"
        android:layout_marginBottom="10dp"/>

    <!--  Pengirim Label -->
    <TextView android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/green_A700"
        tools:textColor="@color/green_A700"
        android:text="Pengirim"/>

    <EditText
        android:id="@+id/txtPengirim"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:singleLine="true"
        tools:textColor="@color/red_500" />
    <!-- Asal Label -->
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Asal"
        android:textColor="#00c87b" />

    <EditText
        android:id="@+id/txtAsal"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"

        tools:textColor="@color/red_500" />
    <!--  Penerima Label -->
    <TextView android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/green_A700"
        tools:textColor="@color/green_A700"
        android:text="Penerima"/>

    <EditText
        android:id="@+id/txtPenerima"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:singleLine="true"
        tools:textColor="@color/red_500" />
    <!--  Tujuan Label -->
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Tujuan"
        android:textColor="#00c87b"/>

    <EditText
        android:id="@+id/txtTujuan"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"

        android:layout_marginBottom="20dp"
        tools:textColor="@color/red_500" />

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/orange_600"
        android:text="Save" />




</LinearLayout>